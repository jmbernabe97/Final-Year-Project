    private void SignInButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        try{
            String query = "SELECT * FROM VOTE.ACCOUNT WHERE username=? AND password=? and accounttype=?";
            con = DriverManager.getConnection("jdbc:derby://localhost:1527/VoteDatabase", "vote", "vote");
            pst = con.prepareStatement(query);
            pst.setString(1, UsernameField.getText());
            pst.setString(2, PasswordField.getText());
            pst.setString(3, String.valueOf(AccountTypeComboBox.getSelectedItem()));
            rs=pst.executeQuery();
            if(rs.next()){
            JOptionPane.showMessageDialog(this, "Username and Password are correct! You are now logged in as " + rs.getString("accounttype"));
            if(AccountTypeComboBox.getSelectedIndex()==0){
                SuperAdmin sp = new SuperAdmin();
                sp.setVisible(true);
                this.setVisible(false);
            }else if (AccountTypeComboBox.getSelectedIndex()==1){
                Admin a = new Admin();
                a.setVisible(true);
                this.setVisible(false);    
            }else if (AccountTypeComboBox.getSelectedIndex()==2){
                Voter v = new Voter();
                v.setVisible(true);
                this.setVisible(false); 
            }
            }
            else{
                JOptionPane.showMessageDialog(this, "Incorrect Username and Password");
            }
        }catch(Exception ex){
            JOptionPane.showMessageDialog(this, ex.getMessage());
        }
    }                                            

    private void ClearButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        UsernameField.setText("");
        PasswordField.setText("");
    }                                           

    private void CancelButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        this.dispose();
    }                                            

